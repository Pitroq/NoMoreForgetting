<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
<!--        <item name="actionBarTheme">@style/AppTheme.ActionBar</item>-->
    </style>
    <style name="AppTheme.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/accent</item>
    </style>
    <style name="AppTheme.ActionBar.Button">
        <item name="tint">@drawable/toolbar_button_color</item>
        <item name="backgroundColor">@color/transparent</item>
    </style>
    <style name="BottomNavigationStyle">
        <item name="android:background">@color/accent</item>
    </style>
    <style name="BottomNavigationTheme">
        <item name="android:textSize">14sp</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="itemIconTint">@drawable/navigation_item_color</item>
        <item name="itemTextColor">@drawable/navigation_item_color</item>
    </style>
</resources>